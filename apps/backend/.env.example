# =============================================================================
# Sequel Backend Environment Configuration
# =============================================================================

# === APP SETTINGS ===
APP_NAME="Sequel Backend API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Backend API for Sequel"
DEBUG=true
ENVIRONMENT="development"

# === API CONFIGURATION ===
API_V1_PREFIX="/api/v1"
HOST="127.0.0.1"
PORT=8000

# === SECURITY ===
SECRET_KEY="your-super-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === CORS & ALLOWED HOSTS ===
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# === DATABASE ===
# DATABASE_URL="postgresql://sequel:password@localhost:5432/sequel_db"
# DATABASE_ECHO=false

# === REDIS & CACHING ===
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=3600

# === CELERY CONFIGURATION ===
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# === KEYBERT SERVICE ===
KEYBERT_ENABLED=true
KEYBERT_DEVICE="cpu"
KEYBERT_DE_MODEL="paraphrase-multilingual-MiniLM-L12-v2"
KEYBERT_EN_MODEL="all-MiniLM-L6-v2"
KEYBERT_MAX_BATCH_SIZE=100
KEYBERT_CACHE_TTL=3600

# === FEATURE FLAGS ===
ENABLE_NLP_SERVICES=true
ENABLE_TEXT_ANALYSIS=true
ENABLE_CONTENT_EXTRACTION=false
ENABLE_BATCH_PROCESSING=true

# === LOGGING ===
LOG_LEVEL="INFO"
# LOG_LEVEL="DEBUG"  # For development
# LOG_LEVEL="WARNING"  # For production
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# === MONITORING ===
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === FILE UPLOAD (Future feature) ===
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["txt", "pdf", "docx", "html"]
